<%= form_for @employee, url: @url, role: :form, html: { multipart: true } do |f| %>
  <!-- Informacion del Empleado -->
  <div class="row">
    <div class="col-md-8 col-xs-offset-2">
      <div class="box box-primary">
        <div class="box-body no-padding">
          <div class="col-md-2" style="margin-top:1.5%;">
              <%= f.file_field :image, :type=>'file', :id=>"imgInp", :style=>"width:80%;"%>
              <img class="profile-user-img" id="preview" src="https://cdn.pixabay.com/photo/2013/07/13/13/38/man-161282_960_720.png" style="height:144px;width:110px;"/>
          </div>
          <div class="col-md-5" style="margin-top:2%;">
            <div class="form-group">
              <h4>
                <%=raw('<i class="glyphicon glyphicon-user"></i>')%>
                <%= f.label :name, "Nombre Completo" %>
                <%= f.text_field :name, class: "form-control", placeholder: "Ingresar nombre", required: true%>
              </h4>
            </div>
            <div class="form-group">
              <h4>
                <%=raw('<i class="glyphicon glyphicon-qrcode"></i>')%>
                <%= f.label :employee_id_number, "Código de Empleado" %>
                <%= f.text_field :employee_id_number, class: "form-control", placeholder: "Ingresar código de empleado", required: true%>
              </h4>
            </div>
          </div>
        </div>
        <div class="box-body no-padding">
          <div class="col-sm-12">
            <div class="form-group" style="margin-top:2%"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Informacion Personal -->
  <div class="row">
    <div class="col-sm-8 col-xs-offset-2">
      <h3>Información Personal</h3>
      <div class="box box-primary">
        <div class="box-body">
          <!-- Primera columna -->
          <div class="col-md-6">
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-tag"></i>')%>
                <%= f.label :id_number, "Número de Identidad" %>
                <%= f.number_field :id_number, class: "form-control", placeholder: "Ingresar número de identidad", required: true%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-tag"></i>')%>
                <%= f.label :rap_code, "Código RAP" %>
                <%= f.number_field :rap_code, class: "form-control", placeholder: "Ingresar número de identidad", required: true%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-user"></i>')%>
                <%= f.label :gender, "Género" %>
                <%= f.select(:gender, ['Masculino', 'Femenino', 'Otro'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-tint"></i>')%>
                <%= f.label :blood_type, "Tipo de Sangre" %>
                <%= f.select(:blood_type, ['O+', 'O-', 'A+', 'A-', 'B+', 'B-', 'AB+', 'AB-'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
              </div>
            </h4>
          </div>
          <!-- Segunda columna -->
          <div class="col-md-6">
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-gift"></i>')%>
                <%= f.label :birth_date, "Fecha de Nacimiento" %>
                <%= f.date_field :birth_date, class: "form-control", required: true%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-globe"></i>')%>
                <%= f.label :birth_place, "Lugar de Nacimiento" %>
                <%= f.text_field :birth_place, class: "form-control", placeholder: "Ingresar lugar de nacimiento", required: true%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-heart-empty"></i>')%>
                <%= f.label :marital_status, "Estado Civil" %>
                <%= f.select(:marital_status, ['Soltero', 'Casado', 'Viudo', 'Unión Libre'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
              </div>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Informacion de Contacto -->
  <div class="row">
    <div class="col-sm-8 col-xs-offset-2">
      <h3>Información de Contacto</h3>
      <div class="box box-primary">
        <div class="box-body">
          <!-- Primera columna -->
          <div class="col-md-6">
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-earphone"></i>')%>
                <%= f.label :cellphone, "Número de Telefono" %>
                <%= f.number_field :cellphone, class: "form-control", placeholder: "Ingresar número de telefono", required: false%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-envelope"></i>')%>
                <%= f.label :email, "Correo Electrónico" %>
                <%= f.text_field :email, class: "form-control", placeholder: "Ingresar correo electrónico", required: false%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-home"></i>')%>
                <%= f.label :address, "Dirección" %>
                <%= f.text_area :address, class: "form-control", placeholder: "Ingresar dirección", required: true%>
              </div>
            </h4>
          </div>
          <!--Segunda columna -->
          <div class="col-md-6">
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-user"></i>')%>
                <%= f.label :emergency_contact_name, "Nombre de Contacto de Emergencia" %>
                <%= f.text_field :emergency_contact_name, class: "form-control", placeholder: "Ingresar contacto de emergencia", required: false%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-earphone"></i>')%>
                <%= f.label :emergency_contact_number, "Número de Contacto de Emergencia" %>
                <%= f.number_field :emergency_contact_number, class: "form-control", placeholder: "Ingresar número de contacto de emergencia", required: false%>
              </div>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Informacion de Empresa -->
  <div class="row">
    <div class="col-sm-8 col-xs-offset-2">
      <h3>Información de la Empresa</h3>
      <div class="box box-primary">
        <div class="box-body">
          <!-- Primera columna -->
          <div class="col-md-6">
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-briefcase"></i>')%>
                <%= f.label :position_id, "Puesto Laboral" %>
                <%= f.select(:position_id, @positions.collect{|a| [a.name, a.id]}, {include_blank: "Escoger..."}, { :class => 'form-control' })%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-equalizer"></i>')%>
                <%= f.label :company, "Base" %>
                <%= f.text_field :company, class: "form-control", placeholder: "Ingresar base", required: true%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-list-alt"></i>')%>
                <%= f.label :contract_type, "Tipo de Contrato" %>
                <%= f.select(:contract_type, ['Contrato Permanente / Indefinido', 'Contrato Temporal / Definido', 'Practicante'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
              </div>
            </h4>
          </div>
          <!-- Segunda columna -->
          <div class="col-md-6">
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-credit-card"></i>')%>
                <%= f.label :bank_account, "Número de Cuenta Bancaria" %>
                <%= f.number_field :bank_account, class: "form-control", placeholder: "Ingresar número de cuenta", required: true%>
              </div>
            </h4>
            <h4>
              <div class="form-group">
                <%=raw('<i class="glyphicon glyphicon-usd"></i>')%>
                <%= f.label :salary, "Salario" %>
                <%= f.number_field :salary, step: :any ,class: "form-control", placeholder: "Ingresar salario", required: true%>
              </div>
            </h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-xs-offset-2">
      <h3>Habilidades</h3>
        <div class="box box-primary">
          <div class="box-body">
            <%= f.fields_for :abilities_employees do |abemp| %>
              <%= render 'abilities_employee_fields', f:abemp %>
            <% end %>
            <div class="links">
            <div class="col-sm-12 text-center">
              <br>
              <%= link_to_add_association 'Agregar Habilidad', f, :abilities_employees, class: "btn btn-sm btn-primary" %>
            </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-xs-offset-2">
      <h3>Educación Formal</h3>
      <div class="box box-primary">
        <div class="box-body">
          <%= f.fields_for :educations_employees do |edemp| %>
            <%= render 'educations_employee_fields', f:edemp %>
          <% end %>
          <div class="links">
            <div class="col-sm-12 text-center">
              <br>
              <%= link_to_add_association 'Agregar Educación', f, :educations_employees, class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="input-group-btn" align="center">
    <%= link_to "Cancelar", admin_employees_path, class: "btn bg-red btn-flat" %>
    <%= f.submit "Crear", class: "btn bg-green btn-flat" %>
  </div>
<%end%>
