<!-- Informacion del Empleado -->
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <div class="col-md-2" style="margin: 1%;">
          <div class="row" style="">
            <% if @employee.image.present? %>
              <%=image_tag @employee.image.url(:medium), :class =>"profile-user-img", :style =>"height:144px;width:110px;"%>
            <%else%>
              <img class="profile-user-img" id="preview" src="https://cdn.pixabay.com/photo/2013/07/13/13/38/man-161282_960_720.png" style="height:144px;width:110px;"/>
            <%end%>
          </div>
        </div>
        <div class="col-md-5" style="margin: 1%;">
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-user"></i> <b>Nombre: </b>')%><%=@employee.name%></h4>
          </div>
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-qrcode"></i> <b>Código Empleado: </b>')%><%=@employee.employee_id_number%></h4>
          </div>
          <div class="row">
            <%if @employee.employee_status%>
              <h4><%= link_to raw('<i class="glyphicon glyphicon-cog"></i> <b>Estado: </b><b class="text-success">Activo</b>'), "#my-modal", "data-toggle" => "modal" %></h4>
            <%else%>
              <h4><%= link_to raw('<i class="glyphicon glyphicon-cog"></i> <b>Estado: </b><b class="text-danger">Inactivo</b>'), "#my-modal", "data-toggle" => "modal" %></h4>
            <%end%>
          </div>
        </div>
        <div class="col-md-4" style="margin:1%;">
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-list"></i> <b>Área: </b>')%><%=@employee.position.department.area.area_id_number.to_s + " - " + @employee.position.department.area.name%></h4>
          </div>
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-list-alt"></i> <b>Departamento: </b>')%><%=@employee.position.department.department_id_number.to_s + " - " + @employee.position.department.name%></h4>
          </div>
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-briefcase"></i> <b>Puesto: </b>')%><%=@employee.position.position_id_number.to_s + " - " + @employee.position.name%></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
