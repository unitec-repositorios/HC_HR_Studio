<!-- Habilidades -->
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Habilidades</h3>
    <div class="box box-primary">
      <div class="box-body">
        <% @employee_abilities.each do |employee_abilities| %>
        <% @employee_institutions =  School.select('name').find(employee_abilities.school_id)%>
        <% @employee_abilities =  Ability.select('ability_name').find(employee_abilities.ability_id)%>
          <!-- Primera Columna -->
          <div class="col-md-6">
            <div class="row">
              <h4><%=raw('<i class="glyphicon glyphicon-wrench col-md-offset-1"></i> <b>Institución:: </b>')%><%=@employee_institutions.name%></h4>
            </div>
            <hr size = 3>
          </div>
          <!-- Segunda Columna -->
          <div class="col-md-6">
            <div class="row">
              <h4><%=raw('<i class="glyphicon glyphicon-wrench col-md-offset-1"></i> <b>Habilidad: </b>')%><%=@employee_abilities.ability_name%></h4>
            </div>
            <hr size = 3>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
<!-- Educaciones -->
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Educación Formal</h3>
    <div class="box box-primary">
      <div class="box-body">
      <% @employee_education.each do |employee_education| %>
      <% @employee_institutions =  School.select('name').find(employee_education.school_id)%>
      <% @employee_educations = Education.select('major_description').find(employee_education.education_id)%>
        <!-- Primera Columna -->
        <div class="col-md-6">
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-education col-md-offset-1"></i> <b>Institución: </b>')%><%=@employee_institutions.name%></h4>
          </div>
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-education col-md-offset-1"></i> <b>Título: </b>')%><%= employee_education.title%></h4>
          </div>
          <hr size = 3>
        </div>
        <!-- Segunda Columna -->
        <div class="col-md-6">
          <div class="row">
            <h4><%=raw('<i class="glyphicon glyphicon-education col-md-offset-1"></i> <b>Descripción de Educación: </b>')%><%=@employee_educations.major_description%></h4>
          </div>
          <div class="row">
            <%if employee_education.completed%>
              <h4><%=raw('<i class="glyphicon glyphicon-education col-md-offset-1"></i> <b>Completado: </b>Si')%></h4>
            <%else%>
              <h4><%=raw('<i class="glyphicon glyphicon-education col-md-offset-1"></i> <b>Completado: </b>No')%></h4>
            <%end%>
          </div>
          <hr size = 3>
        </div>
      <%end%>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="my-modal" tabindex="-1">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
    <%if @employee.employee_status?%>
      <h3 id="myModalLabel">Inactivar Empleado</h3>
    <%else%>
      <h3 id="myModalLabel">Activar Empleado</h3>
    <%end%>
  </div>
  <div class="modal-body">
    <div class="row">
      <%= form_for @employee ,url: @url do |f| %>
      <%= render partial: "suprimir", locals: {f: f} %>
    </div>
  </div>
  <div class="modal-footer">
    <%if @employee.employee_status?%>
      <%= f.submit "Inactivar", class: "btn bg-red btn-flat" %>
    <%else%>
      <%= f.submit "Activar", class: "btn bg-green btn-flat" %>
    <%end%>
  </div>
    <%end%>
</div>
