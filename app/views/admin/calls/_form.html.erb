<div class="col-md-6">
    <div class="form-group">
        <%= f.label :category, "Tipo de Convocatoria" %>
        <%= f.select(:category, ['Capacitación', 'Socialización', 'Taller', 'Evaluación'], {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
    </div>
    <div class="form-group">
        <%= f.label :topic, "Tema" %>
        <%= f.text_field :topic, class: "form-control", autofocus:true%>
    </div>
    <div class="form-group">
        <%= f.label :place, "Lugar" %>
        <%= f.text_field :place, class: "form-control"%>
    </div>
    <div class="form-group">
        <%= f.label :date, "Fecha" %>
        <%= f.date_field :date, class: "form-control"%>
    </div>
</div>

<div class="col-md-6">
    <div class="form-group">
        <%= f.label :ability_id, "Habilidad Adquirida" %>
        <%= f.select(:ability_id, @abilities.collect{|a| [a.ability_name, a.id]}, {include_blank: "Escoger..."}, { :class => 'form-control' }) %>
    </div>
  <div class="form-group">
    <%= f.label :start_time, "Hora de Inicio" %>
    <%= f.time_field :start_time, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :end_time, "Hora de Fin" %>
    <%= f.time_field :end_time, class: "form-control"%>
  </div>
</div>

<div class="col-sm-12">
<div class="box-header with-border">
  <h3 class="box-title">Instructores</h3>
  </div>
  <div class="box box-primary">
    <div class="box-body">
      <%= f.fields_for :calls_instructors do |cins| %>
        <%= render 'calls_instructor_fields', f:cins %>
      <% end %>
      <div class="links">
        <div class="col-sm-12 text-center">
          <br>
          <%= link_to_add_association 'Agregar Instructor', f, :calls_instructors, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-12">
<div class="box-header with-border">
  <h3 class="box-title">Participantes</h3>
  </div>
  <div class="box box-primary">
    <div class="box-body">
      <%= f.fields_for :calls_employees do |cemp| %>
        <%= render 'calls_employee_fields', f:cemp %>
      <% end %>
      <div class="links">
        <div class="col-sm-12 text-center">
          <br>
          <%= link_to_add_association 'Agregar Participante', f, :calls_employees, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>