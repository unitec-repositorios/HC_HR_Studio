<%= form_for @user, url: @url, role: :form, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Nuevo Usuario</h3>
        </div>

        <div class="box-body">
          <%= render partial: 'admin/users/form', locals: { f: f } %>
        </div>

        <div class="box-footer">
          <%= link_to 'Cancelar', admin_users_path, class: 'btn btn-danger' %>
          <%= f.submit 'Crear', class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
